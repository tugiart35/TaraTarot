  "specialCases": {
    "adminRoutes": {
      "strategy": "keepAsIs",
      "reason": "Admin routes should remain consistent across locales",
      "routes": [
        "/{locale}/admin",
        "/{locale}/admin/analytics", 
        "/{locale}/admin/orders",
        "/{locale}/admin/packages",
        "/{locale}/admin/readings",
        "/{locale}/admin/settings",
        "/{locale}/admin/users"
      ]
    },
    "apiRoutes": {
      "strategy": "keepAsIs", 
      "reason": "API routes should remain consistent",
      "routes": [
        "/api/email/send",
        "/api/email/reading",
        "/api/exchange-rate",
        "/api/geolocation",
        "/api/webhook/shopier"
      ]
    },
