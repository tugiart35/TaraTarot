{
  "metadata": {
    "version": "1.0.0",
    "created": "2025-01-20",
    "description": "TaraTarot Projesi - Eski Route'lardan Yeni SEO-Friendly Route'lara Mapping",
    "purpose": "Geriye dönük uyumluluk ve SEO optimizasyonu için URL yönlendirme haritası"
  },
  "redirectStrategy": {
    "type": "301",
    "reason": "SEO-friendly URL'ler ve dil-spesifik path'ler",
    "preserveQueryParams": true,
    "preserveHash": true
  },
  "localeMapping": {
    "tr": {
      "name": "Türkçe",
      "nativeName": "Türkçe",
      "seoFriendly": true,
      "examples": {
        "home": "/tr/anasayfa",
        "tarot": "/tr/tarot-okuma", 
        "numerology": "/tr/numeroloji"
      }
    },
    "en": {
      "name": "English", 
      "nativeName": "English",
      "seoFriendly": true,
      "examples": {
        "home": "/en/home",
        "tarot": "/en/tarot-reading",
        "numerology": "/en/numerology"
      }
    },
    "sr": {
      "name": "Serbian (Latin)",
      "nativeName": "Srpski (Latinica)", 
      "seoFriendly": true,
      "examples": {
        "home": "/sr/pocetna",
        "tarot": "/sr/tarot-citanje",
        "numerology": "/sr/numerologija"
      }
    }
  },
  "routeMappings": {
    "homepage": {
      "current": {
        "tr": "/tr",
        "en": "/en", 
        "sr": "/sr"
      },
      "new": {
        "tr": "/tr/anasayfa",
        "en": "/en/home",
        "sr": "/sr/pocetna"
      },
      "redirects": [
        {
          "from": "/tr",
          "to": "/tr/anasayfa",
          "status": 301,
          "reason": "SEO-friendly homepage URL"
        },
        {
          "from": "/en", 
          "to": "/en/home",
          "status": 301,
          "reason": "SEO-friendly homepage URL"
        },
        {
          "from": "/sr",
          "to": "/sr/pocetna", 
          "status": 301,
          "reason": "SEO-friendly homepage URL"
        }
      ]
    },
